{
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "security-actions/semgrep/run-semgrep/action.yml"
      ],
      "matchStrings": [
        "semgrep\\/semgrep:(?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "semgrep/semgrep"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "security-actions/scan-docker-image/run-trivy/action.yml"
      ],
      "matchStrings": [
        "TRIVY_DB_REPOSITORY:\\s*[^:\\s]+/ghcr/aquasecurity/trivy-db:(?<currentValue>\\d+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/aquasecurity/trivy-db"
    }
  ],
  "packageRules": [
    {
      "description": "Fetch updates for ECR semgrep image from Docker Hub",
      "matchPackageNames": [
        "semgrep/semgrep"
      ],
      "versioning": "docker"
    },
    {
      "description": "Fetch updates for ECR semgrep image from Docker Hub",
      "matchPackageNames": [
        "ghcr.io/aquasecurity/trivy-db"
      ],
      "versioning": "docker"
    }
  ]
}